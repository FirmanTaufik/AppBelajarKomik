<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.joooonho.SelectableRoundedImageView
            android:layout_centerVertical="true"
            app:sriv_left_bottom_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_right_bottom_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:src="@drawable/cover"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_toLeftOf="@id/relativeRight"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_above="@+id/textChapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:id="@+id/textTitle"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="gfdgdgdgg gdgdh ghdhd gdgdg gdgdhhdhdhdhdhhdhdhdhdhhdhdhdhdhhhdhdhdh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textTitle"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/app_name"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeRight"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                    android:text="7.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="15 view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>